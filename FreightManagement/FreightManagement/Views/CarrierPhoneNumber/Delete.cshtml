@model FreightManagement.ViewModels.CarrierPhoneNumberViewModel

@{
    ViewBag.Title = "Detalhes da Telefone";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">@ViewBag.Title:</h3>
        <h3>@Html.DisplayFor(model => model.Carrier.CompanyName)</h3>
    </div>

    <div class="box-body">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.PhoneType, new { @class = "control-label" })
                    @Html.DisplayFor(model => model.PhoneType)
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group-sm">
                    @Html.LabelFor(model => model.PhoneNumber, new { @class = "control-label" })
                    @Html.DisplayFor(model => model.PhoneNumber)
                </div>
            </div>
        </div>
    </div>

    <div class="box-footer">
        <div class="row">
            <div class="col-md-3">
                <a href="/Transportadora?id=@Model.CarrierId" class="btn btn-default">Voltar</a>
            </div>

            <div class="col-md-3">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Remover" class="btn btn-save pull-right" />
                }
            </div>
        </div>
    </div>
</div>
