@model FreightManagement.ViewModels.RatingSearchViewModel

@using (Html.BeginRouteForm("RatingIndex", new { controller = "Rating", action = "Index" }, FormMethod.Get))
{
    <div class=" col-md-3">
        <div class="form-group-sm">
            <label class="control-label">Razão Social</label>
            @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
        </div>
    </div>

    <div class="col-md-3">
        <div class="form-group-sm">
            <label class="control-label">Classificação</label>
            @Html.DropDownList("RateType", new List<SelectListItem>
             {
                new SelectListItem{ Text="Todas", Value = "" },
                new SelectListItem{ Text="Ruim ou Péssima", Value = "0" },
                new SelectListItem{ Text="Não tenho certeza", Value = "1" },
                new SelectListItem{ Text="Boa ou Ótima", Value = "2" }
             }, new { @class = "form-control" })
        </div>
    </div>

    <div class="col-md-3">
        <div class="form-group-sm">
            <button style="margin-top: 24px;" type="submit" class="btn btn-search">Pesquisar</button>
            <a href="/Encontrar-Classificacao" style="margin-top: 24px;" class="btn btn-default">Limpar</a>
        </div>
    </div>
}