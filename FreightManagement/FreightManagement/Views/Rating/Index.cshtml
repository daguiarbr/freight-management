@using FreightManagement.Enums
@model IEnumerable<FreightManagement.ViewModels.RatingViewModel>

@{
    ViewBag.Title = "Listagem de Classificações";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">@ViewBag.Title:</h3>
        <a href="/Cadastrar-Classificacao" clas class="btn btn-sm btn-save pull-right">Cadastrar Nova</a>
    </div>

    <div class="box-header">
        <div class="row">
            @Html.Action("GetFormSearch", "Rating")
        </div>
    </div>

    <div class="box-body table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Carrier.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RateType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Carrier.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RateType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        <td>
                            <a href="/Editar-Classificacao?id=@item.Id" class="btn-img">
                                <img src="/Images/editar.png" alt="Editar" title="Editar" />
                            </a>

                            <a href="/Remover-Classificacao?id=@item.Id" class="btn-img">
                                <img src="/Images/remover.png" alt="Remover" title="Remover" />
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="box-footer clearfix">
        <div class="box-quantity">
            <h5 class="label label-default">Resultado(s): @Model.Count()</h5>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquerymask")
}
